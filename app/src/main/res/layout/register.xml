<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_1"
    android:orientation="vertical"
    tools:context=".activity.register">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/signup2" />

        <EditText
            android:id="@+id/aadhaar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_alignStart="@+id/iv_signup"
            android:background="#00000000"
            android:hint="xxxx xxxx xxxx xxxx"
            android:inputType="number"
            android:maxLength="12"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_signup"
            android:layout_marginTop="70dp"
            android:background="#00000000"
            android:layout_below="@+id/aadhaar"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_signup"
            android:layout_marginTop="70dp"
            android:background="#00000000"
            android:layout_below="@+id/name"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/cpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_alignStart="@+id/iv_signup"
            android:background="#00000000"
            android:layout_below="@+id/pass"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_alignStart="@+id/iv_signup"
            android:background="@drawable/signup3" />

        <ImageView
            android:id="@+id/tv_msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="50dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/mobile_layout"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:layout_alignStart="@+id/iv_mobile"
            android:background="#00000000"
            android:hint="xxxxx xxxxx"
            android:inputType="number"
            android:maxLength="12"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_mobile"
            android:layout_below="@+id/mobile"
            android:layout_marginTop="65dp"
            android:hint="xxxxxx"
            android:background="#00000000"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layout_otp"
            android:layout_below="@+id/otp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/change_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Change number"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="Resend OTP"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/get_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_otp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/get_otp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_otp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/done"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_icon"
        android:layout_margin="10dp"/>

</RelativeLayout>