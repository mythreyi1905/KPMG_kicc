<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gol.pocketmoney">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pmoney"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pmoney"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activity.home"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.register"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.signin"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.mapView"
            android:label="Pocket Money"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.viewResults"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activity.myAccount"
            android:label="My Account" />
        <activity
            android:name=".activity.history"
            android:label="History" />
        <activity
            android:name=".activity.checkCredits"
            android:label="Check Credits" />
        <activity
            android:name=".activity.checkStores"
            android:label="Check Stores" />
        <activity
            android:name=".activity.aboutUs"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>